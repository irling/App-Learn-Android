<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/redImplicit"
    tools:context=".Intents.Implicit_Intent">

    <TextView
        android:id="@+id/tvImplicit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txtIntentExplito"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/btnEjImplicit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnEjImplicit"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:backgroundTint="@color/grayButton"
        android:text="@string/btnExpImplicit"
        android:textAllCaps="true"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvImplicit" />

</androidx.constraintlayout.widget.ConstraintLayout>